<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TabPane fx:id="tabPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" rotateGraphic="true" tabClosingPolicy="UNAVAILABLE" tabMinWidth="100.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.client.controllers.ClientController">
   <tabs>
      <Tab fx:id="MyParcelsTab" text="My Parcels">
         <content>
            <AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="panel" />
            <VBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="50.0" styleClass="panel">
               <children>
                  <HBox alignment="TOP_LEFT" prefHeight="50.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="element-title" text="Parcel ID "/>
                        <Label styleClass="element-title" text="NaN"/>
                     </children>
                  </HBox>
                  <HBox alignment="TOP_LEFT" prefHeight="50.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="element-content" text="sender:" style="-fx-padding: 1px 10px;"/>
                        <Label styleClass="element-content" text="NaN" style="-fx-padding: 1px 10px;"/>
                     </children>
                  </HBox>
                  <HBox alignment="TOP_LEFT" prefHeight="50.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="element-content" text="recipient:" style="-fx-padding: 1px 10px;"/>
                        <Label styleClass="element-content" text="NaN" style="-fx-padding: 1px 10px;"/>
                     </children>
                  </HBox>
                  <HBox alignment="TOP_LEFT" prefHeight="50.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="element-content" text="destination address:" style="-fx-padding: 1px 10px;"/>
                        <Label styleClass="element-content" text="NaN" style="-fx-padding: 1px 10px;"/>
                     </children>
                  </HBox>
                  <HBox alignment="TOP_LEFT" prefHeight="50.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="element-content" text="status:" style="-fx-padding: 1px 10px;"/>
                        <Label styleClass="element-content" text="NaN" style="-fx-padding: 1px 10px;"/>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </Tab>
      <Tab fx:id="SendParcelTab" text="Send Parcel">
         <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" styleClass="panel" />
            <VBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="50.0" styleClass="panel">
               <children>
                  <HBox alignment="CENTER" prefHeight="50.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="title" text="Send Parcel"/>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="50.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="element-content" text="recipient:" style="-fx-padding: 1px 10px;"/>
                        <TextField alignment="CENTER" style="-fx-font-size: 1.2em;">
                           <VBox.margin>
                              <Insets left="160.0" right="160.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="50.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="element-content" text="destination address:" style="-fx-padding: 1px 10px;"/>
                        <TextField alignment="CENTER" style="-fx-font-size: 1.2em;">
                           <VBox.margin>
                              <Insets left="160.0" right="160.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="50.0" prefWidth="100.0">
                     <children>
                        <Button fx:id="sendButton" minHeight="40.0" minWidth="250.0" text="SEND" VBox.vgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </Tab>
      <Tab fx:id="TrackParcelTab" text="Track Parcel">
         <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" styleClass="panel" />
            <VBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="50.0" styleClass="panel">
               <children>
                  <HBox alignment="CENTER" prefHeight="50.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="title" text="Status of Parcel"/>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="50.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="element-content" text="status:" style="-fx-padding: 1px 10px;"/>
                        <Label styleClass="element-content" text="NaN" style="-fx-padding: 1px 10px;"/>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </Tab>
      <Tab fx:id="NotificationsTab" text="Notifications">
         <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" styleClass="panel" />
            <VBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="50.0" styleClass="panel">
               <children>
                  <HBox alignment="CENTER" prefHeight="50.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="title" text="Notifications"/>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="50.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="element-content" text="NaN" style="-fx-padding: 1px 10px;"/>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </Tab>
      <Tab fx:id="AccountSettingsTab" text="Account Settings">
         <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" styleClass="panel" />
         </content>
      </Tab>
      <Tab fx:id="tabLogout" text="Logout">
         <content>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" styleClass="panel">
               <children>
                  <Label styleClass="title" text="Are you sure you want to log out?" />
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#backToLogin" style="-fx-padding: 10px  50px;" text="Yes">
                           <HBox.margin>
                              <Insets right="50.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#backToMainView" style="-fx-padding: 10px  50px;" text="No" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </Tab>
   </tabs>
</TabPane>
